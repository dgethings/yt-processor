{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "lib": ["ES2022"],
    "noImplicitAny": true
  },
  "include": [
    ".opencode/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}